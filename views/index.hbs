<!DOCTYPE html>
<html lang="en" ng-app="AuthSampleApp">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <base href="/">

  <!-- Compiled and minified Materialize CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

  <!-- Materialize Icons -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <!-- Open Sans Font -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

  <!-- Animations -->
  <link href="https://cdn.jsdelivr.net/animatecss/3.5.2/animate.min.css" rel="stylesheet">

  <!-- custom styles -->
  <link rel="stylesheet" type="text/css" href="styles/main.css">

  <!-- JQuery -->
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

  <!-- PapaParse -->
  <script src="//cdnjs.cloudflare.com/ajax/libs/PapaParse/4.1.0/papaparse.js"></script>

  <!-- Compiled and minified Materialize JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>

  <!-- angular -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.0/angular.js"></script>

  <!-- ui router -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.18/angular-ui-router.min.js"></script>

  <!-- satellizer -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/satellizer/0.13.4/satellizer.min.js"></script>

  <!-- custom script (angular app) -->
  <script type="text/javascript" src="scripts/app.js"></script>

  <title>namejar</title>
</head>

<body ng-controller="MainController as main" class="white">
  <nav class="navbar navbar-default white">
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li ng-show="!main.currentUser()"><a ui-sref="signup" class="black-nav">Sign Up</a></li>
          <li ng-show="!main.currentUser()"><a ui-sref="login" class="black-nav">Log In</a></li>
          <li ng-show="main.currentUser()"><a class="black-nav"><img src="http://i.imgur.com/S21aaRl.png" style="height: 15px;" /> Upgrade Account</a></li>
          <li ng-show="main.currentUser()"><a data-target="fair" class="modal-trigger black-nav"><img src="http://i.imgur.com/uQIbT6X.png" style="height: 13px;" /></a></li>
          <li ng-show="main.currentUser()"><a ui-sref="profile" class="black-nav">\{{main.currentUser().displayName}} <img src="http://i.imgur.com/etjVHlT.png" style="height: 8px;" /></a></li>
          <li ng-show="main.currentUser()"><a ui-sref="logout" class="black-nav">Log Out</a></li>
        </ul>
      </div>
  </nav>

  <div id="fair" class="modal">
    <div class="modal-content">
      <h4>Sign In</h4>
      <form class="col s12">
        <div class="input-field col s6">
            <input id="first_name" type="text" class="validate">
            <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">
            <input id="last_name" type="text" class="validate">
            <label for="last_name">Last Name</label>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat"><i class="fa fa-times" aria-hidden="true"></i></a>
    </div>
  </div>

  <div class="row">
    <ui-view>
  </div>

</body>

<script>
  $(document).ready(function(){
    // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
    $('.modal-trigger').leanModal();
  });
</script>
</html>
